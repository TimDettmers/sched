#!/bin/bash

if [ -z $1 ]
then
  days_back=0
else
  days_back=$1
fi

if [ -z $2 ]
then
  user=dettmers
else
  user=$2
fi
   
query_date=$(date --date="-$days_back day" -I)


sacct -X --format="Elapsed,Jobid%18,State,Account,Partition,Reason,NodeList%30" -S $query_date -u $user
#sacct -X --format="Elapsed,Jobid%18,State,Account,Partition,Reason,NodeList%30" -S $query_date 
